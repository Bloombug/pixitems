<div class="page-header">
	<h2>Gestor</h2> 
</div>

<div style="background-color: #fff; padding: 12px; border-radius: 5px;">

	<form class="form-horizontal" role="form"
	enctype="multipart/form-data" method="POST"
	action="/database/{year}/{month}">


	<div class="form-group">
		<label for="fieldPhoto" class="col-sm-2 control-label">
		Ficheiro (.DBF) dos produtos</label>
		<div class="col-sm-4">

			<!-- Only accept dbf files! -->
			<input type="file" class="form-control" required
			accept=".dbf" id="fieldDB" name="database">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary">Submeter</button>
		</div>
	</div>

</form>

</div>